{
  "name": "leopays.contracts",
  "generators": [
    {
      "name": "collate_markdown",
      "options": {
        "docs_dir": "docs"
      }
    },
    {
      "name": "mdjavadoc",
      "options": {
        "source_dirs": [
          "contracts/lpc.token/include/lpc.token/",
          "contracts/lpc.wrap/include/lpc.wrap/",
          "contracts/lpc.bios/include/lpc.bios/",
          "contracts/lpc.system/include/lpc.system/",
          "contracts/lpc.msig/include/lpc.msig/"
        ],
        "output_dir": "action-reference"
      }
    }
  ],
  "skip_default_filters": true,
  "filters": [
    {
      "name": "sanitize",
      "options": {
        "exclude": ["action-reference"]
      }
    },
    {
      "name": "capitalize",
      "options": {
        "mode": "all",
        "exclude": ["action-reference"]
      }
    }
  ]
}
